{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@hooks/*": ["src/hooks/*"],
      "@modal/*": ["src/modal/*"],
      "@pages/*": ["src/pages/*"],
      "@store": ["src/store/index.ts"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"],
      "@types": ["src/types/*"]
    }
  },
  "include": ["src", "src/**/*.tsx", "src/types/*.d.ts", "meta.js"],
  "exclude": ["node_modules", "build", "**/*.spec.ts"]
}
